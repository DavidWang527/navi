#!/usr/bin/env bash
set -euo pipefail

##? make install
##? make uninstall

source "$(dirname "$0")/aux/core.sh"

_install() {
   "${NAVI_HOME}/scripts/install" "$@"
   exit 1
}

_uninstall() {
   echoerr "TODO"
   exit 1
}

cmd="$1"
shift

case "$cmd" in
   "install") _install "$@" ;;
   "uninstall") _uninstall "$@" ;;
   *) exit 2 ;;
esac
